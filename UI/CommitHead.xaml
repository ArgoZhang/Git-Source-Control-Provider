<UserControl x:Class="GitScc.UI.CommitHead"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="24" d:DesignWidth="100">
    <StackPanel Height="20" Orientation="Horizontal">
        <Polygon Points="0,0.5 1,0 1,1" Fill="Yellow" Width="16" Height="12" Stretch="Fill" />
        <Border BorderThickness="1" CornerRadius="4" Background="Yellow">
            <TextBlock Padding="10, 0" Text="{Binding Text}"></TextBlock>
        </Border>
    </StackPanel>
</UserControl>
