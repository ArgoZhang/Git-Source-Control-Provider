<UserControl x:Class="GitSccProvider.UI.StatusBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GitSccProvider.UI"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="350">
    <Grid>
        <StackPanel HorizontalAlignment="center" VerticalAlignment="Center" Margin="0,0,25,0">
            <TextBlock x:Name="_tbStatus"  TextWrapping="Wrap" Width="200"><Run Text="First"/></TextBlock>
        </StackPanel>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,25,0">
            <Button x:Name="_btnOk" Content="Ok" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Click="_btnOk_Click"/>
        </StackPanel>
      
    </Grid>
</UserControl>
